{
    "name": "maxxxam/graphql-yii",
    "type": "library",
    "description": "Extension implements GraphQL into Yii2",
    "keywords": ["GraphQL", "yii2", "API"],
    "license": "MIT",
    "authors": [
        {
            "name": "Maxim Belkanov",
            "email": "maxxxam-me@yandex.ru"
        }
    ],
    "require": {
        "php": ">=7.0",
        "yiisoft/yii2": "~2.0.5",
        "webonyx/graphql-php": "0.10.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.3.0"
    },
    "autoload": {
        "psr-4": {
            "GraphQLYii\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQLYii\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "GraphQLYii\\GraphQL"
    },
    "scripts": {
        "test": "phpunit"
    }
}
